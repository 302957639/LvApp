<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:id="@+id/viewfirst"
    android:orientation="horizontal">
    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/jizhangben_add_canyin"
        android:text="餐饮"
        android:id="@+id/canyin"
        android:gravity="center"
        android:textColor="@drawable/addxiaofei_text_color"
        android:layout_weight="1"/>
    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:id="@+id/jiaotong"
        android:text="交通"
        android:gravity="center"
        android:textColor="@drawable/addxiaofei_text_color"
        android:drawableTop="@drawable/jizhangben_add_jiaotong"
        android:layout_weight="1"/>
    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="购物"
        android:gravity="center"
        android:textColor="@drawable/addxiaofei_text_color"
        android:id="@+id/gouwu"
        android:drawableTop="@drawable/jizhangben_add_gouwu"
        android:layout_weight="1"/>
    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="娱乐"
        android:id="@+id/yule"
        android:gravity="center"
        android:textColor="@drawable/addxiaofei_text_color"
        android:drawableTop="@drawable/jizhangben_add_yule"
        android:layout_weight="1"/>
    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="美容"
        android:id="@+id/meirong"
        android:gravity="center"
        android:textColor="@drawable/addxiaofei_text_color"
        android:drawableTop="@drawable/jizhangben_add_meirong"
        android:layout_weight="1"/>
</RadioGroup>
</LinearLayout>