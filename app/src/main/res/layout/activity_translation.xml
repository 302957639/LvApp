<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/back_selector"
            android:button="@null" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="实时翻译"
            android:background="#fff"
            android:textColor="#000"
            android:textSize="20sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/translation_selector"
            android:button="@null" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B0B0B0" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="2"
        android:id="@+id/choosefirst"
        android:text="简体中文"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#B0B0B0"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/translate_page_swap_lang_img"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#B0B0B0"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/choosesecond"
        android:layout_weight="2"
        android:text="英语"/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B0B0B0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
       <ListView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/translationshow">

       </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#9d9d9d"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/translate_page_bottom_torecord_img" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@mipmap/translate_page_bottom_input_bg"
            android:hint="请输入要翻译的文字" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.5"
            android:background="@mipmap/translate_page_bottom_send_btn_gray"
            android:text="发送"
            android:textColor="#fff"
            android:textSize="17sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>